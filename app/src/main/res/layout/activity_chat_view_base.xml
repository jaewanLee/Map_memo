<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:gravity="right"
            android:id="@+id/chat_me_layout_lv"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2016-01-23"
                android:paddingRight="10dp"
                android:gravity="bottom"
                android:id="@+id/chat_me_date_tv"
                android:textSize="10dp"
                android:paddingBottom="5dp"
                />
            <TextView
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_me_png2"
                android:textSize="18dp"
                android:paddingTop="5dp"
                android:inputType="textMultiLine|textNoSuggestions"
                android:maxWidth="200dp"
                android:text=""
                android:gravity="left"
                android:id="@+id/chat_me_text_tv"
                android:textColor="#000000"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/default_user3"
                android:id="@+id/chat_me_profile_iv"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:gravity="left"
            android:id="@+id/chat_other_layout_lv"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/default_user3"
                android:id="@+id/chat_other_profile_iv"/>

            <TextView
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_other_png2"
                android:paddingTop="5dp"
                android:textSize="18dp"
                android:inputType="textMultiLine|textNoSuggestions"
                android:maxWidth="200dp"
                android:text=" "
                android:gravity="left"
                android:id="@+id/chat_other_text_tv"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2016-01-23"
                android:paddingLeft="10dp"
                android:id="@+id/chat_otherc_date_tv"
                android:textSize="10dp"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:id="@+id/chat_notice_lv"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="테스트"
                android:gravity="center"
                android:id="@+id/chat_notice_tv"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
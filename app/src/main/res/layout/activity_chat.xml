<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="#여기요"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginLeft="130dp"
            android:textSize="30dp"
            android:id="@+id/chat_title_textView"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:src="@drawable/addicon3"
            android:scaleType="fitXY"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:id="@+id/chat_add_Imagebutton"
            />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:id="@+id/chat_listview_listView"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="#000000">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/location"
            android:scaleType="fitXY"
            android:background="#000000"
            android:id="@+id/chat_map_ImageButton"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"            android:src="@drawable/list"
            android:scaleType="fitXY"
            android:background="#000000"
            android:id="@+id/chat_list_Imagebutton"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:src="@drawable/chat"
            android:scaleType="fitXY"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="#000000"
            android:id="@+id/chat_chat_Imagebutton"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:src="@drawable/setting"
            android:scaleType="fitXY"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="#000000"
            android:id="@+id/chat_setting_Imagebutton"
            />

    </LinearLayout>


</LinearLayout>
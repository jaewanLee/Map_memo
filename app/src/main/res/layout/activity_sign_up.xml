<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="12"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#ec6161"
        android:padding="7dp">
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_title_low"
            android:gravity="center"
            android:textSize="25dp"
            android:id="@+id/signUp_title_textView"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#e1e1e1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="회원 가입"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:id="@+id/signUp_subtitle_textView"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10.7"
        android:orientation="vertical"
        android:background="#ffffff"
        android:weightSum="12">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="아이디"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textSize="17dp"
            android:id="@+id/signUp_userId_textView"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:background="@drawable/round_edit_text"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:textSize="25dp"
                android:hint="이메일"
                android:inputType="textEmailAddress"
                android:id="@+id/signUp_userId_EditText"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_button"
                android:text="중복확인"
                android:textSize="20dp"
                android:id="@+id/signUp_dulpicate_button"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="비밀번호"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textSize="17dp"
            android:id="@+id/signUp_password_textView"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:hint=" 6~12자리 영문/숫자 혼합"
            android:background="@drawable/round_edit_text"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:textSize="25dp"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:id="@+id/signUp_password_EditText"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="비밀번호 확인"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textSize="17dp"
            android:id="@+id/signUp_passwordCheck_textView"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_edit_text"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:textSize="25dp"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:id="@+id/signUp_passwordCheck_EditText"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="이름"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textSize="17dp"
            android:id="@+id/signUp_name_textView"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="@drawable/round_edit_text"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:textSize="25dp"
            android:id="@+id/signUp_name_EditText"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="핸드폰 번호"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textSize="17dp"
            android:id="@+id/signUp_phone_textView"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="10">
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.2"
                android:background="@drawable/round_edit_text"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:textSize="25dp"
                android:inputType="number"
                android:textAlignment="center"
                android:id="@+id/signUp_phone1_EditText"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.2"
                android:background="@drawable/round_edit_text"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="25dp"
                android:textAlignment="center"
                android:inputType="number"
                android:id="@+id/signUp_phone2_EditText"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.2"
                android:background="@drawable/round_edit_text"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:textSize="25dp"
                android:textAlignment="center"
                android:inputType="number"
                android:id="@+id/signUp_phone3_EditText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:weightSum="4"
            android:layout_marginTop="10dp"
            android:padding="10dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="28dp"
                android:layout_weight="1.9"
                android:background="@drawable/button_save_low"
                android:id="@+id/signUp_save_button"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.9"
                android:background="@drawable/button_cancle_low"
                android:id="@+id/signUp_cancel_button"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
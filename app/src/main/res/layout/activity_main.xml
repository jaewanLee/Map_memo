<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jaewanlee.android_project.com.map_memo.MainActivity"
    android:background="@drawable/main_background"
    android:weightSum="10"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="100dp"
        android:text="#여기요"
        android:gravity="center"
        android:layout_marginRight="15dp"
        android:textSize="35dp"
        android:textStyle="bold"
        android:id="@+id/main_title_textView"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:weightSum="15"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:textSize="25dp"
            android:textStyle="italic"
            android:hint="아이디"
            android:paddingLeft="10dp"
            android:background="@drawable/round_edit_text"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:id="@+id/main_id_editText"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:textSize="25dp"
            android:textStyle="italic"
            android:hint="●●●●"
            android:paddingLeft="10dp"
            android:background="@drawable/round_edit_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:id="@+id/main_pass_editText"
            android:inputType="textPassword"

            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.1"
            android:weightSum="10">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center"
                android:layout_marginLeft="65dp"
                android:layout_gravity="center"
                android:background="@drawable/round_button"
                android:text="로그인"
                android:textSize="22dp"
                android:id="@+id/main_login_button"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="회원 가입"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/main_signup_textView"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="아이디/비밀번호 찾기"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/main_findId_textView"
            />

        <com.facebook.login.widget.LoginButton
            android:layout_below="@+id/label"
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="12"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ec6161">
        <Space
            android:layout_width="0dp"
            android:layout_marginLeft="7dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_height="match_parent"
            android:background="@drawable/title_using_low"
            android:id="@+id/home_title_textView"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:layout_marginRight="7dp"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:background="@drawable/add_memo_low"
            android:id="@+id/home_add_button"
            android:scaleType="fitXY"
            android:focusable="false"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#e1e1e1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="최근 메모"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:id="@+id/home_subtitle1_textView"/>

    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.2"
        android:id="@+id/home_memo_listView"
        android:focusable="true"
        android:focusableInTouchMode="true"

        ></ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#e1e1e1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="추천 지역"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:id="@+id/home_subtitle2_textView"/>

    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:id="@+id/home_sliding_viewPaper"
        android:clipToPadding="false"
        android:paddingRight="200dp"
        >

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10"
        android:background="#e1e1e1">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:src="@drawable/map_off_click_low"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:id="@+id/home_map_ImageButton"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:src="@drawable/list_off_click_low"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:id="@+id/home_list_Imagebutton"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:src="@drawable/message_off_click_low"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:id="@+id/home_chat_Imagebutton"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:src="@drawable/setting_off_click_low"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:id="@+id/home_setting_Imagebutton"
            />

    </LinearLayout>

</LinearLayout>